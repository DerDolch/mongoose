%h2 Create New Task

%fieldset
  - form_for(:task, :url => product_story_task_path(@product, @story, @task)) do |f|
    = f.error_messages
    
    %ul
      %li
        = f.label :title
        = f.text_field :title
      %li
        = f.label :description
        = f.text_area :description
      %li
        = f.label :hours
        = f.text_field :hours
      %li
        = f.label :task_status_id 
        = collection_select(:task, :task_status_id, @task_statuses, :id, :name )
        = f.hidden_field :story_id, :value => params[:story_id]

      %li= f.submit "Create Task"

= link_to 'Back', product_story_tasks_path(@product, @story)
